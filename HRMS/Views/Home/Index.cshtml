@model HRMS.Models.Employee.EmployeeDetailsModel

@{
    ViewData["Title"] = "Home Page";
}
@{
    await Html.RenderPartialAsync("_Sidebar");
}
<!-- Layout container -->
<div class="layout-page">
    <!-- Content wrapper -->
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-1 mb-0">Home</h4>
            <hr class="my-4" />
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <h5 class="card-header">Profile Details</h5>
                        <!-- Account -->
                        <div class="card-body">
                            <div class="d-flex align-items-start align-items-sm-center gap-5">
                                <img src="~/images/profile1.jpg" alt="user-avatar" class="d-block rounded" height="100" width="100"
                                     id="uploadedAvatar" />
                                <div class="py-0">
                                    <div class="py-2">
                                        <span>@Model.FirstName @Model.LastName</span>
                                    </div>

                                    <div class="py-2">
                                        <span>@Model.Designation</span>
                                    </div>
                                    <div class="py-2">
                                        <span>@Model.Email</span>
                                    </div>
                                </div>
                                <a asp-action="Edit" asp-controller="Employee" asp-route-id="@Model.EmployeeId">
                                    <button type="button"
                                            class="btn btn-primary me-2 btn-lg btn-pinned"
                                            style="right: 7.75rem;top: 5.75rem;">
                                        <i class="fa fa-edit"></i> Edit
                                    </button>
                                </a>
                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <div class="row">
                                <div class="mb-3 col-md-4">
                                    <div class="form-label"><small>Employee ID</small></div>
                                    <div>@Model.EmployeeId</div>
                                </div>
                                <div class="mb-3 col-md-4">
                                    <div class="form-label"><small>Reports To</small></div>
                                    <div>@Model.ReportsToString</div>
                                </div>
                                <div class="mb-3 col-md-4">
                                    <div class="form-label"><small>Time in current position</small></div>
                                    <div>@(Model.TimeInCurrentPosition?.ToString("0.00")) years</div>
                                </div>
                                <div class="mb-3 col-md-4">
                                    <div class="form-label"><small>Start date</small></div>
                                    <div>@Model.StartDate</div>
                                </div>
                                <div class="mb-3 col-md-4">
                                    <div class="form-label"><small>Accumulated tenure (duration)</small></div>
                                    <div>@(Model.AccumulatedTenure?.ToString("0.00")) years</div>
                                </div>
                                <div class="mb-3 col-md-4">
                                    <div class="form-label"><small>Work mobile</small></div>
                                    <div>@Model.PhoneNumber</div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-0" />
                    </div>
                    <div class="card mb-4">
                        <h5 class="card-header">Profile Details</h5>
                        <hr class="my-0" />
                        <div class="card-body">
                            <div class="row">
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Date of Birth</small></div>
                                    <div>@Model.DateOfBirthStr</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Nationality</small></div>
                                    <div>@Model.Nationality</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Blood Group</small></div>
                                    <div>@Model.BloodGroup</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Gender</small></div>
                                    <div>@Model.Gender</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Marital Status</small></div>
                                    <div>@Model.MaritalStatusDesc</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Religion</small></div>
                                    <div>@Model.Religion</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>NID</small></div>
                                    <div>@Model.NID</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Passport No</small></div>
                                    <div>@Model.PassportNo</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>TIN</small></div>
                                    <div>@Model.TIN</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Tax Circle</small></div>
                                    <div>@Model.TaxCircel</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Tax zone</small></div>
                                    <div>@Model.TaxZone</div>
                                </div>

                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Personal Email</small></div>
                                    <div>@Model.PersonalEmail</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Personal Phone</small></div>
                                    <div>@Model.PersonalPhone</div>
                                </div>
                                <div class="mb-3 col-md-6 col-lg-4">
                                    <div class="form-label"><small>Personal Mobile</small></div>
                                    <div>@Model.PersonalMobile</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <h5 class="card-header">Work Details</h5>
                        <hr class="my-0" />
                        <div class="card-body">
                            <div class="text-nowrap">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Effective date</th>
                                            <th>Job title</th>
                                            <th>Reports to</th>
                                            <th>Changed type</th>
                                            <th>Reason</th>
                                            @*<th>Changed by</th>*@
                                        </tr>
                                    </thead>
                                    <tbody class="table-border-bottom-0">
                                        @{
                                            foreach (var his in Model.WorkHistoryDetails)
                                            {
                                                <tr>
                                                    <td>@(((DateTime)his.EffectiveDate).ToString("dd/MM/yyyy"))</td>
                                                    <td>@his.Designation</td>
                                                    <td>@his.ManagerName</td>
                                                    <td>@his.ChangedType</td>
                                                    <td>@his.Reason</td>
                                                    @*<td>@his.ModifiedBy</td>*@
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->

    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->
</div>
<!-- / Layout page -->
@{
    await Html.RenderPartialAsync("_CommonView");
}
