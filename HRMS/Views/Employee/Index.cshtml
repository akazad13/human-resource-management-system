@model List<HRMS.Models.Employee.EmployeeDataModel>

@{
    ViewData["Title"] = "Employee List";
}
@{
    await Html.RenderPartialAsync("_Sidebar");
}
<!-- Layout container -->
<div class="layout-page">
    <!-- Content wrapper -->
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-1"><span class="text-muted fw-light">Dashboard /</span> Employee</h4>
            <a asp-action="Add" asp-controller="Employee"><span type="button" class="btn btn-primary me-2 btn-pinned"><i class="fa fa-plus" aria-hidden="true"></i> Add New Employee</span></a>
            <hr class="my-4" />

            <!-- Striped Rows -->
            <div class="card">
                <div class="text-nowrap">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Designation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @{
                                //if (Model != null)
                               // {

                                    foreach (var emp in Model)
                                    {
                                        <tr>
                                            <td>@emp.EmployeeId</td>
                                            <td>@emp.FirstName</td>
                                            <td>@emp.LastName</td>
                                            <td>@emp.Email</td>
                                            <td>@emp.Designation</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.EmployeeId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                        <a class="dropdown-item disabled" href="javascript:void(0);" title="Function is not implemented yet."><i class="bx bx-trash me-1"></i> Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                               // }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!--/ Striped Rows -->

            <hr class="my-5" />
            <div class="content-backdrop fade"></div>
        </div>
    </div>
    <!-- Content wrapper -->
</div>
<!-- / Layout page -->
@{
    await Html.RenderPartialAsync("_CommonView");
}
